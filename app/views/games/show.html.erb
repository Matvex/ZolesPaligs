<p id="notice"><%= notice %></p>

<p>
  <strong>Id:</strong>
  <%= @game.id %>
</p>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>

<div class='scores'>
  <table>
    <thead>
      <th>
        <%= @game.player0_name %>
      </th>
      <th>
        <%= @game.player1_name %>
      </th>
      <th>
        <%= @game.player2_name %>
      </th>
      <th>
        <%= @game.player3_name %>
      </th>
      <th>
        Pules
      </th>
    </thead>
    <tbody>
      <% @game.deals.each do |deal| %>
        <tr>
          <td>
            <%= deal.solist_nr %>
          </td>
          <td>
            <%= deal.win %>
          </td>
          <td>
            <%= deal.severity %>
          </td>
          <td>
            <%= deal.zole %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'deals/form', deal: @deal %>

