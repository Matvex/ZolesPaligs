<p>
  <strong>Id:</strong>
  <%= @game.id %>
</p>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>

<div class='scores'>
  <table>
    <thead>
      <th>
        <%= @game.player0_name %>
      </th>
      <th>
        <%= @game.player1_name %>
      </th>
      <th>
        <%= @game.player2_name %>
      </th>
      <th>
        <%= @game.player3_name %>
      </th>
      <th>
        Pules
      </th>
    </thead>
    <tbody>
      <% @game.scoresheet_points.each do |deal_points| %>
        <tr>
          <td>
            <%= deal_points[0] %>
          </td>
          <td>
            <%= deal_points[1] %>
          </td>
          <td>
            <%= deal_points[2] %>
          </td>
          <td>
            <%= deal_points[3] %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'deals/form', deal: @deal %>

